@model TarkovStats.Services.PagedResponseMetaData

<nav>
    <ul class="pagination">
        @if (Model.ShowPrevious)
        {
            <li class="page-item">
                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @for (var i = Model.StartIndex; i <= Model.EndIndex; i++)
        {
            <li class="page-item@(Model.CurrentPage == i ? " active":"")"><a class="page-link" asp-route-currentPage="@i">@i</a></li>
        }
        @if (Model.ShowNext)
        {
            <li class="page-item">
                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage+1)">Next</a>
            </li>
        }
    </ul>
</nav>